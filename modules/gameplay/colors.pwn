//------------------------------------------------------------------------------

YCMD:mycolor(playerid, params[], help)
{
    new colorlist[3181], playerColor = GetPlayerColor(playerid);
    for(new i = 0; i < sizeof(PlayerColors); i++)
    {
        new string[32];
        format(string, sizeof(string), "{%06x}\"\"\"\"\t%s\n", PlayerColors[i] >>> 8, (PlayerColors[i] == playerColor) , "X" , " ");
        strcat(colorlist, string);
    }
    ShowPlayerDialog(playerid, DIALOG_COLORS, DIALOG_STYLE_TABLIST, "My Color", colorlist, "Confirm", "Cancel");
    return 1;
}

//------------------------------------------------------------------------------

hook OnDialogResponse(playerid, dialogid, response, listitem, inputtext[])
{
    switch(dialogid)
    {
        case DIALOG_COLORS:
        {
            if(!response)
            {
                PlayCancelSound(playerid);
                return 1;
            }
            SendClientMessagef(playerid, COLOR_SUCCESS, "* You changed your color to {%06x}this.", PlayerColors[listitem] >>> 8);
            SetPlayerColor(playerid, PlayerColors[listitem]);
            PlayConfirmSound(playerid);
            return -2;
        }
    }
    return 1;
}
